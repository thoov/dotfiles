[alias]
  st = status
  co = checkout
[core]
  editor = nvim
[includeIf "gitdir:~/code/@linkedin/"]
  path = .gitconfig-linkedin
[merge]
  tool = opendiff
  conflictstyle = diff3
[log]
  date = local
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
